                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="ChangePaymentButtonStyle" TargetType="HyperlinkButton" BasedOn="{StaticResource BaseHyperlinkButtonStyle}">
