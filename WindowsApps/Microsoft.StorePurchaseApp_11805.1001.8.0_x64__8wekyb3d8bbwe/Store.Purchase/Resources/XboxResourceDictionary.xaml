            <Color x:Key="PrimaryBackgroundColor">#2b2b2b</Color>
            <SolidColorBrush x:Key="PrimaryHighlightBrush" Color="{ThemeResource PrimaryHighlightColor}"></SolidColorBrush>
            <SolidColorBrush x:Key="PrimaryForegroundBrush" Color="{ThemeResource PrimaryForegroundColor}"></SolidColorBrush>
            <SolidColorBrush x:Key="PrimaryBackgroundBrush" Color="#2b2b2b"></SolidColorBrush>
            <SolidColorBrush x:Key="PrimaryButtonBackgroundBrush" Color="#ffffff"></SolidColorBrush>
            <SolidColorBrush x:Key="PrimaryButtonMouseOverBackgroundBrush" Color="#003f62"></SolidColorBrush>
            <SolidColorBrush x:Key="DefaultButtonForegroundBrush" Color="{ThemeResource PrimaryForegroundColor}"></SolidColorBrush>
            <SolidColorBrush x:Key="DefaultButtonBorderBrush" Color="#a4a4a4"></SolidColorBrush>
            <SolidColorBrush x:Key="LinkTextForegroundBrush" Color="{ThemeResource PrimaryForegroundColor}"></SolidColorBrush>
            <SolidColorBrush x:Key="LinkTextHoverForegroundBrush" Color="{ThemeResource PrimaryForegroundColor}"></SolidColorBrush>
            <SolidColorBrush x:Key="DefaultButtonMouseOverBackgroundBrush" Color="{ThemeResource PrimaryHighlightColor}"></SolidColorBrush>
            <SolidColorBrush x:Key="DefaultButtonMouseOverBorderBrush" Color="{ThemeResource PrimaryForegroundColor}"></SolidColorBrush>
            <SolidColorBrush x:Key="DefaultButtonMouseOverForegroundBrush" Color="{ThemeResource PrimaryForegroundColor}"></SolidColorBrush>
            <SolidColorBrush x:Key="LegalTextForegroundBrush" Color="#B2FFFFFF"></SolidColorBrush>
            <x:Double x:Key="ErrorDetailsStackPanelOpacity">0.3</x:Double>
            <x:Double x:Key="DefaultButtonMouseOverBorderThickness">2</x:Double>
            <x:Double x:Key="ButtonFontSize">12</x:Double>
        </ResourceDictionary>

        <ResourceDictionary x:Key="HighContrast">
            <Color x:Key="PrimaryBackgroundColor">Transparent</Color>
            <SolidColorBrush x:Key="PrimaryHighlightBrush" Color="{ThemeResource SystemColorWindowTextColor}"></SolidColorBrush>
            <SolidColorBrush x:Key="PrimaryForegroundBrush" Color="{ThemeResource SystemColorWindowTextColor}"></SolidColorBrush>
            <SolidColorBrush x:Key="PrimaryBackgroundBrush" Color="{ThemeResource SystemColorWindowColor}"></SolidColorBrush>
            <SolidColorBrush x:Key="PrimaryButtonBackgroundBrush" Color="Transparent"></SolidColorBrush>
            <SolidColorBrush x:Key="PrimaryButtonMouseOverBackgroundBrush" Color="{ThemeResource SystemColorWindowTextColor}"></SolidColorBrush>
            <SolidColorBrush x:Key="DefaultButtonForegroundBrush" Color="{ThemeResource SystemColorWindowTextColor}"></SolidColorBrush>
            <SolidColorBrush x:Key="DefaultButtonBorderBrush" Color="{ThemeResource SystemColorButtonTextColor}"></SolidColorBrush>
            <SolidColorBrush x:Key="LinkTextForegroundBrush" Color="{ThemeResource SystemColorWindowTextColor}"></SolidColorBrush>
            <SolidColorBrush x:Key="LinkTextHoverForegroundBrush" Color="{ThemeResource SystemColorButtonTextColor}"></SolidColorBrush>
            <SolidColorBrush x:Key="DefaultButtonMouseOverBackgroundBrush" Color="{ThemeResource SystemColorWindowColor}"></SolidColorBrush>
            <SolidColorBrush x:Key="DefaultButtonMouseOverBorderBrush" Color="{ThemeResource SystemColorWindowTextColor}"></SolidColorBrush>
            <SolidColorBrush x:Key="DefaultButtonMouseOverForegroundBrush" Color="{ThemeResource SystemColorWindowTextColor}"></SolidColorBrush>
            <SolidColorBrush x:Key="LegalTextForegroundBrush" Color="{ThemeResource SystemColorWindowTextColor}"></SolidColorBrush>
